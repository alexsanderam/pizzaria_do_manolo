		Cliente cliente = null;
		
		try {
			cliente = Cliente.criarCliente(telefone, nome, email, senha, endereco);
			id = 0l;
			cliente.definirId(id);
			assertEquals(id, cliente.obterId());
			
		} catch (Exception e) {
			assertEquals(ExcecaoDeCliente.class, e.getClass());
		}
	}
